<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.machinetracker.ui.DeleteMachineController"
      spacing="20" alignment="CENTER" prefWidth="300" prefHeight="150">

    <Label fx:id="confirmationLabel" text="Are you sure you want to delete this machine?" wrapText="true"/>
    <HBox spacing="20">
        <Button text="Yes" onAction="#handleDelete"/>
        <Button text="No" onAction="#handleCancel"/>
    </HBox>
</VBox>